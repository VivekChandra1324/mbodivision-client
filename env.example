# MbodiVision Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json
GCP_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PROJECT=your-project-id
GCP_REGION=us-central1
GCP_ARTIFACT_REGION=us-central1

# Google Cloud Storage
GCS_BUCKET_NAME=your-bucket-name
GCS_CREDENTIALS_PATH=/path/to/your/service-account.json

# PostgreSQL Database
POSTGRES_URL=postgresql://username:password@host:port/database_name

# Artifact Registry (for training containers)
GCP_ARTIFACT_REPO=yolo-containers
GCP_ARTIFACT_IMAGE=ultralytics:latest
YOLO_CONTAINER_URI=gcr.io/your-project/yolo-training:latest

# Service Account (optional, for specific permissions)
GCP_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com

# Training Configuration
TRAINING_THRESHOLD=5
AUTO_START_PIPELINE=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Optional: Managed Model Configuration
MODEL_SERVING_CONTAINER_IMAGE_URI=gcr.io/your-project/model-serving:latest
MODEL_DISPLAY_NAME=mbodivision-model
